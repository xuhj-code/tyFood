<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:gravity="center"
            android:background="@drawable/account">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"

                android:id="@+id/iv_head"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_order_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item">

                <ImageView
                    android:id="@+id/iv_order_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_order_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_order_list"
                    android:text="订单"
                    android:textSize="@dimen/content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/line_devider_grey"
                android:layerType="software" />

            <RelativeLayout
                android:id="@+id/rl_account_security"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item">

                <ImageView
                    android:id="@+id/iv_account_security"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_account_security" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_account_security"
                    android:text="账户与安全"
                    android:textSize="@dimen/content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/line_devider_grey"
                android:layerType="software" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
